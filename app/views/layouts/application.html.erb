<!DOCTYPE html>
<html>
<head>
  <title>BillsReminder</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300' rel='stylesheet' type='text/css'>
  <link href="http://fonts.googleapis.com/css?family=Oswald:400,300" rel="stylesheet" type="text/css">

  <%#= javascript_include_tag 'https://cdn.datatables.net/1.10.11/js/jquery.dataTables.min.js' %>

</head>
<body>

<ul class='main_menu horizontal_menu'>
  <li><%= active_link_to 'Dashboard', dashboard_path, active: :exact %></li>

  <li><%= active_link_to 'Transactions', transactions_path, active: :exact  %></li>

  <li><%= active_link_to 'New Transaction', new_transaction_path, active: :exact  %></li>

  <li><%= active_link_to 'Bills', bills_path, active: :exact  %></li>

  <li><%= active_link_to 'New Bill', new_bill_path, active: :exact  %></li>

  <li><%= active_link_to 'Sources', sources_path, active: :exact  %></li>

  <li><%= active_link_to 'Purposes', purposes_path, active: :exact  %></li>

  <li><%= active_link_to 'Categories', categories_path, active: :exact  %></li>

  <li><%= active_link_to 'New Category', new_category_path, active: :exact  %></li>

  <li><%= active_link_to 'Transformations', transformations_path, active: :exact  %></li>

  <li><%= active_link_to 'New Transformation', new_transformation_path, active: :exact  %></li>

  <li><%= active_link_to 'Parsers', parsers_path, active: :exact  %></li>

  <li><%= active_link_to 'New Parsers', new_parser_path, active: :exact  %></li>

  <li><%= active_link_to 'Graphs', '', active: :exact  %></li>
</ul>

<% if Parser.parser.nil? %>
  <div class='alert'>There is no enabled parser!</div>
<% end %>

<%= render 'layouts/flash_messages' %>

<%= yield %>

</body>
</html>
