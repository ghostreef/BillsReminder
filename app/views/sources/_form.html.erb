<%= form_for @source do |f| %>

  <% if @source.errors.any? %>
  <% end %>

  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :regex %>
    <%= f.text_field :regex %>
  </p>

  <div>
    <%= f.label :purpose %>
    <div class='styled_select'>
      <%= f.collection_select(:purpose_id, Purpose.all, :id, :name) %>
    </div>
  </div>

  <%= f.submit %>

<% end %>
