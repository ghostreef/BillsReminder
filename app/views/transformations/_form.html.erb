<%= form_for @transformation do |f| %>

  <% if @transformation.errors.any? %>
  <% end %>

  <p>
    <%= f.label :regex %>
    <%= f.text_field :regex %>
  </p>

  <p>
    <%= f.label :case_insensitive, 'Case Insensitive?', class: 'inline_label' %>
    <%= f.check_box :case_insensitive %>
  </p>

  <div>
    <%= f.label :derives %>
    <div class='styled_select'>
      <%= f.select :derives, Transaction.derivable, prompt: 'derives nothing' %>
    </div>
  </div>

  <p>
    <%= f.label :value %>
    <%= f.text_field :value %>
  </p>

  <div>
    <%= f.label :set %>
    <div class='styled_select'>
      <%= f.select :set, Transformation.sets.keys, prompt: 'belongs to no set' %>
    </div>
  </div>

  <div>
    <%= f.label :implies %>
    <div class='styled_select'>
      <%= f.collection_select :transformation_id, Transformation.transform, :id, :value, prompt: 'implies nothing' %>
    </div>
  </div>

  <%= f.submit %>

<% end %>
