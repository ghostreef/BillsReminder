<%= form_for @transformation do |f| %>

  <% if @transformation.errors.any? %>
  <% end %>

  <p>
    <%= f.label :pattern %>
    <%= f.text_field :pattern %>
  </p>

  <p>
    <%= f.label :case_insensitive %>
    <%= f.check_box :case_insensitive %>
  </p>

  <p>
    <%= f.label :transform %>
    <%= f.text_field :transform%>
  </p>

  <p>
    <%= f.label :value %>
    <%= f.text_field :value %>
  </p>

  <p>
    <%= f.label :type %>
    <%= f.select :transformation_type, Transformation.transformation_types.keys %>
  </p>

  <%= f.submit %>

<% end %>
