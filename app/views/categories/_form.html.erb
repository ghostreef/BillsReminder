<%= form_for @category do |f| %>

  <% if @category.errors.any? %>
  <% end %>

  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :source_ids, 'Sources' %>
    <%= f.collection_select :source_ids, Source.order(:name), :id, :name, {}, { multiple: true } %>
  </p>

  <p>
    <%= f.label :purpose_ids, 'Purposes' %>
    <%= f.collection_select :purpose_ids, Purpose.order(:name), :id, :name, {}, { multiple: true } %>
  </p>

  <%= f.submit 'SUBMIT', class: 'button salmon_button' %>

<% end %>
